<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="56dp"
        >

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Daily Activity"
            android:textSize="25sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:listitem="@layout/daily_activity_list_item" />

        <TextView
            android:id="@+id/titleFriendList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Friend List"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:paddingLeft="16dp"
            android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/friend_list_item" />

    </LinearLayout>

</FrameLayout>